@page "/products"

@using OnlineShop.Components.Products
@using OnlineShop.BusinessLogic

@inherits ShopBase

<MudContainer Class="mt-5 px-8 mobile-container" MaxWidth="MaxWidth.False" Style="min-height:80vh;">
    <MudText Class="mb-3" Typo="Typo.h3" Align="Align.Center">All products</MudText>
    <MudGrid>
        @foreach (var product in ProductList)
        {
            <MudItem xs="12" sm="6" md="4" @onclick="@(() => ShowDetails(product))">
                <Product ProductModel="product" />
            </MudItem>
        }
    </MudGrid>
</MudContainer>
