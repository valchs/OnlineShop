@page "/products"

@using OnlineShop.Components.Products
@using OnlineShop.BusinessLogic

@inherits ShopBase

<MudContainer Class="mt-16 px-8 mobile-container" MaxWidth="MaxWidth.False" Style="min-height:80vh;">
    <MudGrid>
        @foreach (var product in ProductList)
        {
            <MudItem xs="12" sm="6" md="4">
                <Product ProductModel="product" />
            </MudItem>
        }
    </MudGrid>
    <MudButton Variant="Variant.Filled" OnClick="AddProduct">Add</MudButton>
    <MudButton Variant="Variant.Filled" OnClick="clicked">Open dialog</MudButton>
</MudContainer>
