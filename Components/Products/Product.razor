@using OnlineShop.BusinessLogic

@inherits ShopBase 

<MudCard>
    <MudCardMedia Image="@ProductModel.ImagePath" Height="200" />
    <MudCardContent>
        <MudText Typo="Typo.h5">@ProductModel.Title</MudText>
        <MudText Typo="Typo.body2">@ProductModel.Description</MudText>
    </MudCardContent>
    <MudCardActions>
        @if (IsSeller)
        {
            <MudButton Variant="Variant.Text" Color="Color.Error" OnClick="@DeleteProduct" Class="ml-auto">Delete</MudButton>
        }
        <MudButton Variant="Variant.Text" Color="Color.Primary" OnClick="ShowDetails">Learn More</MudButton>
    </MudCardActions>
</MudCard>
